# =============================================================================
# Neko Signal System — Environment Configuration TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values.
# The .env file must NEVER be committed to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Binance API Credentials (leave blank for public-only / signal-only mode)
# -----------------------------------------------------------------------------
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# -----------------------------------------------------------------------------
# InfluxDB v2 Telemetry (leave blank to disable metrics entirely)
# Get your token from: InfluxDB UI → Load Data → API Tokens
# -----------------------------------------------------------------------------
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_api_token_here
INFLUXDB_ORG=neko
INFLUXDB_BUCKET=neko_signal

# -----------------------------------------------------------------------------
# Webhook / Notifier
# Discord example : https://discord.com/api/webhooks/XXXXX/YYYYY
# Telegram example: https://api.telegram.org/botTOKEN/sendMessage
# -----------------------------------------------------------------------------
WEBHOOK_URL=https://hooks.example.com/neko-signal
WEBHOOK_TIMEOUT_S=10.0

# -----------------------------------------------------------------------------
# Trading Universe (comma-separated ccxt USDM perpetual symbols)
# -----------------------------------------------------------------------------
TRADING_PAIRS=BTC/USDT:USDT,ETH/USDT:USDT,SOL/USDT:USDT,BNB/USDT:USDT,XRP/USDT:USDT

# -----------------------------------------------------------------------------
# Exchange Configuration
# -----------------------------------------------------------------------------
API_RATE_LIMIT_MS=200
MAX_RETRIES=3
RETRY_DELAY_S=2.0

# -----------------------------------------------------------------------------
# Timeframes & Data Sizes
# -----------------------------------------------------------------------------
PRIMARY_TIMEFRAME=1m
OHLCV_LIMIT=500
ORDERBOOK_DEPTH=50

# -----------------------------------------------------------------------------
# Session Killzone (UTC hours, half-open interval [START, END))
# 12:00 UTC = 19:00 VN Time | 21:00 UTC = 04:00 VN Time (next day)
# -----------------------------------------------------------------------------
SESSION_START_UTC=12
SESSION_END_UTC=21

# -----------------------------------------------------------------------------
# Signal Quality Thresholds
# -----------------------------------------------------------------------------
SCORE_LONG_THRESHOLD=4
SCORE_SHORT_THRESHOLD=-4
MIN_RR_RATIO=2.0

# -----------------------------------------------------------------------------
# Anti-Wash Trading Filter
# -----------------------------------------------------------------------------
WASH_TRADE_TAKER_RATIO_LOW=0.49
WASH_TRADE_TAKER_RATIO_HIGH=0.51
MIN_VOLUME_EFFICIENCY=0.0002
ATR_MA_PERIOD=24
ATR_PERIOD=14

# -----------------------------------------------------------------------------
# Volume Profile
# -----------------------------------------------------------------------------
VP_BINS=30
HVN_PERCENTILE=75.0

# -----------------------------------------------------------------------------
# CVD / OFI Rolling Windows
# -----------------------------------------------------------------------------
CVD_WINDOW=20
OFI_WINDOW=10

# -----------------------------------------------------------------------------
# Momentum / Orderbook
# -----------------------------------------------------------------------------
MOMENTUM_ROC_PERIOD=5
OB_IMBALANCE_FACTOR=1.2
OB_PROXIMITY_PCT=0.005

# -----------------------------------------------------------------------------
# Risk Manager
# -----------------------------------------------------------------------------
ATR_SL_MULTIPLIER=1.5
SWING_LOOKBACK=20
HVN_PROXIMITY_PCT=0.005

# -----------------------------------------------------------------------------
# Main Scan Loop
# -----------------------------------------------------------------------------
LOOP_INTERVAL_S=60.0
